<style type="text/css">
    table tbody .c0 {
        width: 70%;
    }
</style>

<div id="mod-observation-user-observation-topics">
    {{#has_topics}}
        <table class="mod-observation-topic-items generaltable">
            <thead>
            <tr>
                <th></th>
                <th></th>
                <th>Submitted</th>
                <th></th>
                <th>Meets Standard</th>
            </tr>
            </thead>
            <tbody>
            {{#topics}}
                <tr>
                    <td class="c0">
                        <h4>{{title}}</h4>
                    </td>
                    <td class="c1">
                        <a href="{{{url}}}" class="btn btn-secondary">{{# str}} review_observation, observation {{/str}}</a>
                    </td>
                    <td class="c2">
                        {{{submission_status_icon}}}
                    </td>
                    <td class="c3">
                        {{!TODO: VALIDATE SUBMISSION STATUS IN manage_url}}
                        <a
                            class="btn btn-secondary"
                            {{^is_submitted}}
                            href="{{{manage_url}}}"
                            {{/is_submitted}}
                            {{#is_submitted}}
                            href="#"
                            disabled
                            title="{{# str}} requests_disabled:title, observation {{/str}}"
                            {{/is_submitted}}
                        >
                            {{# str}} manage_requests, observation {{/str}}
                        </a>
                    </td>
                    <td class="c4">
                        {{{completion_icon_html}}}
                    </td>
                </tr>
            {{/topics}}
            </tbody>
        </table>
    {{/has_topics}}
</div>
