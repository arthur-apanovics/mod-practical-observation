

<h5>Completion observations</h5>

<div class="wrapper-task">
    <ol class="criteria-list">
        {{#criteria}}
            {{> mod_observation/comp-completion_criteria}}
        {{/criteria}}
    </ol>
</div>

{{#extra.is_submission}}
    <form action="submit.php"
          id="attempt-form"
          method="post"
          enctype="multipart/form-data"
          accept-charset="utf-8"
          autocomplete="off">
{{/extra.is_submission}}

    <h5>Information and evidence from the trainee</h5>
    <div class="wrapper-task">
        {{#learner_submissions}} {{! should only ever be one as we're filtering by userid in the renderer}}
            {{#learner_attempts}}
                {{> mod_observation/comp-attempt_entry}}
            {{/learner_attempts}}
        {{/learner_submissions}}

        {{#extra.is_submission}}
            <div class="new-attempt">
                <h5 class="title-secondary">
                    {{#str}}attempt_number, observation, {{extra.attempt_number}}{{/str}}
                </h5>
                <div class="editor-container">
                    {{{extra.editor_html}}}
                    {{{extra.filemanager_html}}}
                </div>
            </div>
        {{/extra.is_submission}}

    </div>
{{#extra.is_submission}}

        <input type="hidden" name="cmid" value={{extra.cmid}}>
        <input type="hidden" name="learner_submission_id" value={{extra.learner_submission_id}}>
        <input type="hidden" name="attempt_id" value={{extra.attempt_id}}>

        <div class="button-wrapper">
            <button type="submit" class="btn btn-primary">
                {{#str}}request_observation, observation{{/str}}
            </button>
        </div>

    </form>
{{/extra.is_submission}}

