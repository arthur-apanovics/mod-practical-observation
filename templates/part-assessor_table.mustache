<table class="submissions-summary">
    <thead>
    <tr>
        <th>Name</th>
        <th>Attempt</th>
        <th>Observed</th>
        <th>Complete</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    {{#extra.submission_summary_data}}
        <tr>
            <td>{{name}}</td>
            <td>{{attempt}}</td>
            <td>{{observed}}</td>
            <td style="font-size: 1.5em;">
                {{#complete}}
                    {{#flex_icon}}check-circle-o, {"alt":"Activity complete"}{{/flex_icon}}
                {{/complete}}
                {{^complete}}
                    {{#flex_icon}}times-circle-o, {"alt":"Activity not complete"}{{/flex_icon}}
                {{/complete}}
            </td>
            <td>
                <a href="{{{module_root}}}/activity_assess.php?id={{cmid}}&userid={{userid}}">
                    {{#flex_icon}}edit, {"alt":"view/assess"}{{/flex_icon}}
                </a>
            </td>
        </tr>
    {{/extra.submission_summary_data}}

    {{^extra.submission_summary_data}}
        <tr>
            <td>No submissions</td>
        </tr>
    {{/extra.submission_summary_data}}

    </tbody>
</table>