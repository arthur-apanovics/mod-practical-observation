<div>
    <div class="group-container" style="float: right; margin: 1em;">
        <label for="group-selector">Group selector</label>
        <select style="display: inline;" name="group-selector" id="group-selector">
            {{! TODO: group selector}}
            <option value selected disabled>todo</option>
        </select>
    </div>

    <h5>Learner submissions</h5>
    <table class="submissions-summary">
        <thead class="submisisons-header">
        <tr>
            <th colspan="1"></th>
            <th colspan="2" class="attempts-group">Attempts</th>
            <th colspan="3"></th>
        </tr>
        <tr>
            <th>Learner</th>
            <th class="attempts-group ">Observations</th>
            <th class="attempts-group">Assessments</th>
            <th>Tasks observed</th>
            <th>Complete</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {{#extra.submission_summary_data}}
            <tr class="submissions-row">
                <td class="name">
                    <a href="{{{learner_profile_url}}}">
                        {{learner}}
                    </a>
                </td>
                <td class="attempts-group observation">
                    {{attempt_number_observation}}
                </td>
                <td class="attempts-group assessment">
                    {{attempt_number_assessment}}
                </td>
                <td class="observed">
                    {{observed_count_formatted}}
                </td>
                <td class="completion">
                    {{#is_complete}}
                        {{#flex_icon}}check-circle-o, {"alt":"Activity complete", "classes":"complete"}{{/flex_icon}}
                    {{/is_complete}}
                    {{^is_complete}}
                        {{#flex_icon}}
                            times-circle-o, {"alt":"Activity not complete", "classes":"not-complete"}{{/flex_icon}}
                    {{/is_complete}}
                </td>
                <td class="actions">
                    <a href="{{{module_root}}}/activity_assess.php?id={{cmid}}&learnerid={{userid}}">
                    {{#flex_icon}}edit, {"alt":"todo: lang string"}{{/flex_icon}}
                    </a>
                </td>
            </tr>
        {{/extra.submission_summary_data}}

        {{^extra.submission_summary_data}}
            <tr>
                <td>No submissions yet</td>
            </tr>
        {{/extra.submission_summary_data}}

        </tbody>
    </table>
</div>